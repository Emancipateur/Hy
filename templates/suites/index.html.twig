{% extends 'base.html.twig' %}

{% block title %}Suites index{% endblock %}

{% block body %}
    <h1>Suites index</h1>


     {% for suite in suites %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th class='suiteDescriptionAdmin'>Description</th>
                <th>Prix</th>
                <th>Lien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
       

            <tr>
                <td>{{ suite.id }}</td>
                <td>{{ suite.titre }}</td>
                <td class='suiteDescriptionAdmin'>{{ suite.description }}</td>
                <td>{{ suite.prix }}</td>
                <td>{{ suite.lien }}</td>
                <td>
                    <a href="{{ path('app_suites_show', {'id': suite.id}) }}">Voir</a>
                    <a href="{{ path('app_suites_edit', {'id': suite.id}) }}">Modifier</a>
                </td>
            </tr>

    

  
     </tbody>
        </table>
    <div class="imageSuiteAdmin">
                       {% for i in suite.images %}             
<img src="{{ asset('./uploads/'~i.titre) }}" alt="" width="150">
    {% endfor %}
    </div>
        {% endfor %}
    

    <a href="{{ path('app_suites_new') }}">Create new</a>
{% endblock %}
